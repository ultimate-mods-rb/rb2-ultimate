      {sprintf
         "first_time_%s.milo"
         {elem
            (CHAR_INSTRUMENT_SYMBOLS)
            [controller_type]}})
   #else
   (file
      {if_else
         {==
            [controller_type]
            2}
         {sprintf
            "first_time_vocals_wii.milo"}
         {sprintf
            "first_time_%s.milo"
            {elem
               (CHAR_INSTRUMENT_SYMBOLS)
               [controller_type]}}})
   #endif
   #else
   (file
      {if_else
         {==
            [controller_type]
            2}
         {sprintf
            "first_time_vocals_ps2.milo"}
         {sprintf
            "first_time_%s.milo"
            {elem
               (CHAR_INSTRUMENT_SYMBOLS)
               [controller_type]}}})
   #endif
   (focus ok.btn)
   (is_loaded
